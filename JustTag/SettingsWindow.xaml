<Window x:Class="JustTag.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JustTag"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Button x:Name="installShellButton" Content="Install Windows Shell Extension" Margin="0,10,0,0" Click="installShellButton_Click"/>
            <Button x:Name="uninstallShellButton" Content="Uninstall Windows Shell Extension" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
