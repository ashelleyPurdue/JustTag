<UserControl x:Class="JustTag.Controls.FileBrowser.FileListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustTag.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <Image x:Name="iconImg" 
               DockPanel.Dock="Left"
               Width="20"
               Height="20"
               Source="/JustTag;component/Resources/folderIcon.png"
         />
        <Label x:Name="nameLabel" DockPanel.Dock="Left" VerticalAlignment="Top">Test</Label>
    </DockPanel>
</UserControl>
