<Window x:Class="FileBrowserWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileBrowserWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="#FFF0F0F0">
    <Grid>
        <ListBox x:Name="folderContentsBox" Margin="10,38,10,10" MouseDoubleClick="folderContentsBox_MouseDoubleClick"/>
        <TextBox x:Name="currentPathBox" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" KeyUp="currentPathBox_KeyUp" TextChanged="currentPathBox_TextChanged" Margin="88,10,10,0"/>

        <Grid Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="73" Height="23">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="backButton" Content="&lt;-" Click="backButton_Click" />
            <Button Grid.Column="1" x:Name="upButton" Content="^" Click="upButton_Click"/>
            <Button Grid.Column="2" x:Name="forwardButton" Content="-&gt;" Click="forwardButton_Click"/>
        </Grid>

    </Grid>
</Window>
